  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": false,
  "formatter": {
    "format_on_save": "on",
    "language_server": {
      "name": "biome"
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "importModuleSpecifierPreference": "relative"
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "allFeatures": true
        },
        "procMacro": {
          "enable": true
        }
      }
    },
    "clangd": {
      "initialization_options": {
        "fallbackFlags": ["-std=c++20"]
      }
    },
    "pyright": {
      "initialization_options": {
        "python": {
          "analysis": {
            "typeCheckingMode": "strict",
            "autoImportCompletions": true
          }
        }
      }
    },
    "zls": {
      "initialization_options": {
        "enable_snippets": true
      }
    }
  },
  "language_overrides": {
    "TypeScript": {
      "format_on_save": "on",
      "preferred_line_length": 100,
      "tab_size": 2
    },
    "JavaScript": {
      "format_on_save": "on",
      "preferred_line_length": 100,
      "tab_size": 2
    },
    "Rust": {
      "tab_size": 4,
      "preferred_line_length": 100
    },
    "Python": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["-", "--quiet"]
        }
      }
    },
    "C": {
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    },
    "Zig": {
      "tab_size": 4
    },
    "JSON": {
      "tab_size": 2
    },
    "TOML": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "SCSS": {
      "tab_size": 2
    }
  },
  "terminal": {
    "font_size": 14,
    "alternate_scroll": true,
    "blinking": "on",
    "shell": {
      "program": "/bin/zsh"
    }
  },
  "editor": {
    "auto_bracket_pairs": true,
    "wrap_guides": [80, 100, 120],
    "show_whitespaces": "none",
    "scrollbar": {
      "show": "always"
    },
    "soft_wrap": "preferred_line_length"
  },
  "copilot": {
    "disabled_globs": [
      "**/.env*",
      "**/node_modules/**",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/pnpm-lock.yaml"
    ]
  }
}
